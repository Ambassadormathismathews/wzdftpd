#!/bin/sh

set -e

if [ "$1" != "remove" ] && [ "$1" != "purge" ]; then
	exit 0
fi

CONFIG=/etc/wzdftpd/wzd.cfg

if [ -f $CONFIG ]; then
	grep -v "^module[[:space:]]*=[[:space:]]*.*libwzd_zeroconf.so" $CONFIG > $CONFIG.avahiremove

	chmod --reference=$CONFIG $CONFIG.avahiremove
	mv $CONFIG.avahiremove $CONFIG
fi

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0

