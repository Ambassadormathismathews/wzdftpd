#!/bin/sh

set -e

if [ "$1" != "remove" ] && ["$1" != "purge" ]; then
	exit 0
fi

CONFIG=/etc/wzdftpd/wzd.cfg

if [ -f $CONFIG ]; then
	grep -v "^module[[:space:]]*=[[:space:]]*.*libwzd_perl.so" $CONFIG > $CONFIG.perlremove

	# we keep site_perl*, as they can be customized by user

	chmod --reference=$CONFIG $CONFIG.perlremove
	mv $CONFIG.perlremove $CONFIG
fi

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0

