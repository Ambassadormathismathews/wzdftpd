#!/bin/sh

set -e

CONFIG=/etc/wzdftpd/wzd.cfg

if [ "$1" != "configure" ]; then
	exit 0
fi

if [ -f $CONFIG ]; then
	if ! grep -q "^module[[:space:]]*=[[:space:]]*.*libwzd_zeroconf.so" $CONFIG
	then
	  echo "module = /usr/lib/wzdftpd/modules/libwzd_zeroconf.so" >> $CONFIG

	fi
fi

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0

