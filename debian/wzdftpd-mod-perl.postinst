#!/bin/sh

set -e

CONFIG=/etc/wzdftpd/wzd.cfg

if [ "$1" != "configure" ]; then
	exit 0
fi

if [ -f $CONFIG ]; then
	if ! grep -q "^module[[:space:]]*=[[:space:]]*.*libwzd_perl.so" $CONFIG
	then
	  echo "module = /usr/lib/wzdftpd/modules/libwzd_perl.so" >> $CONFIG

	  if ! grep -q "^-site_perl.*" $CONFIG
	  then
	    echo "-site_perl = +O" >> $CONFIG
	  fi
	fi
fi

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0

